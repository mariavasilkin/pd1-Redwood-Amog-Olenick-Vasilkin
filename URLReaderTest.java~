import java.io.*;
import java.net.*;
import java.util.Scanner;
public class URLReaderTest {

    public static String getUrlSource(String url) throws IOException {
	URL yahoo = new URL(url);
	URLConnection yc = yahoo.openConnection();
	BufferedReader in = new BufferedReader
	    (new InputStreamReader(yc.getInputStream(), "UTF-8"));
	String inputLine;
	StringBuilder a = new StringBuilder();
	while ((inputLine = in.readLine()) != null)
	    a.append(inputLine);
	in.close();

	return a.toString();
    }

    public String wiki(String subject) {
	String s = subject;
	for (int i = 0; i < subject.length; i++) {
	    if ((subject.substring(i,i+1)).equals(" ")) {
		s = subject.substring(0,i) + "_" + subject.substring(i+1);
	    }
	}
	String url = "http://en.wikipedia.org/wiki/" + s;
	return getUrlSource(url);
    }
	
    public static void main (String[] args) {
	String topic;
	URLReader url = new URLReader();
	Scanner input = new Scnner(System.in);
	System.out.println("Enter a subject matter");
	topic = input.next();
        System.out.println(url.wiki(topic));
	
    }
    
}
